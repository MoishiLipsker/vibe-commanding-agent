{
    "name": "FriendlyForce",
    "description": "A friendly force entity representing allied units or assets",
    "fields": {
        "id": {
            "type": "string",
            "required": true,
            "description": "Unique identifier for the friendly force"
        },
        "name": {
            "type": "string",
            "required": true,
            "description": "Name or designation of the friendly force"
        },
        "type": {
            "type": "string",
            "required": true,
            "description": "Type of friendly force",
            "enum": ["infantry", "vehicle", "aircraft", "ship", "other"]
        },
        "status": {
            "type": "string",
            "required": true,
            "description": "Current status of the friendly force",
            "enum": ["active", "inactive", "damaged", "destroyed"]
        },
        "location": {
            "type": "object",
            "required": true,
            "description": "Current location of the friendly force",
            "properties": {
                "lat": {
                    "type": "number",
                    "required": true
                },
                "lon": {
                    "type": "number",
                    "required": true
                }
            }
        },
        "isSOS": {
            "type": "boolean",
            "required": false,
            "description": "is the force in distress"
        },
        "casualties": {
            "type": "number",
            "required": false,
            "description": "The amount of casualties in the force"
        },
        "unit": {
            "type": "string",
            "required": true,
            "description": "The unit of the force",
            "enum": ["1st Platoon", "2nd Platoon", "3rd Platoon", "1 DIV", "2 DIV"]
        },
            "Company": {
            "type": "string",
            "required": true,
            "description": "The company of the force",
            "enum": ["Company A", "Company B", "Company C"]
        },
       "created_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of task creation",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of last update",
            "format": "date-time"
        }
    }
} 
