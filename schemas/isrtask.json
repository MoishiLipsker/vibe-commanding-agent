{
    "name": "ISRTask",
    "description": "An Intelligence, Surveillance, and Reconnaissance task",
    "fields": {
        "id": {
            "type": "string",
            "required": true,
            "description": "Unique identifier for the ISR task"
        },
        "target_id": {
            "type": "string",
            "required": true,
            "description": "ID of the target to surveil"
        },
        "status": {
            "type": "string",
            "required": true,
            "description": "Current status of the task",
            "enum": ["pending", "in_progress", "completed", "failed"]
        },
        "assigned_to": {
            "type": "string",
            "required": false,
            "description": "ID of the unit or asset assigned to the task"
        },
        "location": {
            "type": "object",
            "required": true,
            "description": "Current location of the isr task",
            "properties": {
                "lat": {
                    "type": "number",
                    "required": true
                },
                "lon": {
                    "type": "number",
                    "required": true
                }
            }
        },
        "created_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of task creation",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of last update",
            "format": "date-time"
        }
    }
} 
