{
    "name": "Arrow",
    "description": "A directional arrow entity representing movement or direction",
    "fields": {
        "id": {
            "type": "string",
            "required": true,
            "description": "Unique identifier for the arrow"
        },
         "location": {
            "type": "object",
            "required": true,
            "description": "Current location of the phase line",
            "properties": [{
                "lat": {
                    "type": "number",
                    "required": true
                },
                "lon": {
                    "type": "number",
                    "required": true
                }
            }]
        },
        "type": {
            "type": "string",
            "required": true,
            "description": "Type of arrow",
            "enum": ["movement", "direction", "attack", "retreat", "other"]
        },
        "style": {
            "type": "object",
            "required": false,
            "description": "Visual style of the arrow",
            "properties": {
                "color": {
                    "type": "string",
                    "description": "Color of the arrow"
                },
                "width": {
                    "type": "number",
                    "description": "Width of the arrow line"
                },
                "dashed": {
                    "type": "boolean",
                    "description": "Whether the arrow line is dashed"
                }
            }
        },
        "description": {
            "type": "string",
            "required": false,
            "description": "Additional description of the arrow's purpose"
        },
        "created_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of arrow creation",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of last update",
            "format": "date-time"
        }
    }
} 
