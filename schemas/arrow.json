{
    "type": "arrow",
    "description": "A directional arrow entity representing movement or direction",
    "fields": {
        "_id": {
            "type": "string",
            "required": true,
            "description": "Unique identifier for the arrow"
        },
         "position": {
            "type": "object",
            "required": true,
            "description": "Current location of the phase line",
            "properties": [{
                "lat": {
                    "type": "number",
                    "required": true
                },
                "lon": {
                    "type": "number",
                    "required": true
                }
            }]
        },
           "assigned_to": {
            "type": "string",
            "required": false,
            "description": "ID of the executing unit"
        },
         "status": {
            "type": "string",
            "required": true,
            "description": "Current status of the arrow",
            "default":"inactive",
            "enum": ["active", "inactive"]
        },
        "arrowType": {
            "type": "string",
            "required": true,
            "description": "Type of arrow",
            "defaultValue":"movement",
            "enum": ["movement", "direction", "attack", "retreat", "other"]
        },
        "description": {
            "type": "string",
            "required": false,
            "description": "Additional description of the arrow's purpose"
        },
        "createdBy": {
            "type": "string",
            "required": true,
            "description": "User ID who created the entity"
        },
        "updatedBy": {
            "type": "string",
            "required": false,
            "description": "User ID who last updated the entity"
        },
        "created_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of arrow creation",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of last update",
            "format": "date-time"
        }
    }
} 
