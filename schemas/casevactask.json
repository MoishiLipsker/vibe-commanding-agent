{
    "name": "CASEVACTask",
    "description": "A Casualty Evacuation task entity",
    "fields": {
        "id": {
            "type": "string",
            "required": true,
            "description": "Unique identifier for the CASEVAC task"
        },
        "priority": {
            "type": "string",
            "required": true,
            "description": "Priority level of the CASEVAC task",
            "enum": ["urgent", "priority", "routine"]
        },
        "status": {
            "type": "string",
            "required": true,
            "description": "Current status of the CASEVAC task",
            "enum": ["pending", "in_progress", "completed", "cancelled"]
        },
        "casualty_location": {
            "type": "object",
            "required": true,
            "description": "Location of the casualty",
            "properties": {
                "lat": {
                    "type": "number",
                    "required": true
                },
                "lon": {
                    "type": "number",
                    "required": true
                },
                "alt": {
                    "type": "number",
                    "required": false
                }
            }
        },
        "destination": {
            "type": "object",
            "required": true,
            "description": "Medical facility destination",
            "properties": {
                "name": {
                    "type": "string",
                    "required": true
                },
                "location": {
                    "type": "object",
                    "required": true,
                    "properties": {
                        "lat": {
                            "type": "number",
                            "required": true
                        },
                        "lon": {
                            "type": "number",
                            "required": true
                        }
                    }
                }
            }
        },
        "casualty_details": {
            "type": "object",
            "required": true,
            "description": "Details about the casualty",
            "properties": {
                "count": {
                    "type": "integer",
                    "required": true,
                    "minimum": 1
                },
                "condition": {
                    "type": "string",
                    "required": true,
                    "enum": ["stable", "serious", "critical"]
                },
                "injuries": {
                    "type": "array",
                    "required": false,
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "assigned_vehicle": {
            "type": "string",
            "required": false,
            "description": "ID of the vehicle assigned to the task"
        },
        "estimated_arrival": {
            "type": "string",
            "required": false,
            "description": "Estimated arrival time at destination",
            "format": "date-time"
        },
        "created_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of task creation",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of last update",
            "format": "date-time"
        }
    }
} 