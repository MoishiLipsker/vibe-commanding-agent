{
    "name": "CASEVACTask",
    "description": "A Casualty Evacuation task entity",
    "fields": {
        "id": {
            "type": "string",
            "required": true,
            "description": "Unique identifier for the CASEVAC task"
        },
         "assigned_to": {
            "type": "string",
            "required": false,
            "description": "ID of the unit or asset assigned to the task"
        },
        "priority": {
            "type": "string",
            "required": true,
            "description": "Priority level of the CASEVAC task",
            "enum": ["urgent", "priority", "routine"]
        },
        "status": {
            "type": "string",
            "required": true,
            "description": "Current status of the CASEVAC task",
            "enum": ["pending", "in_progress", "completed", "cancelled"]
        },
        "position": {
            "type": "object",
            "required": true,
            "description": "Location of the casualty",
            "properties": {
                "lat": {
                    "type": "number",
                    "required": true
                },
                "lon": {
                    "type": "number",
                    "required": true
                }
            }
        },
        "casualty_details": {
            "type": "string",
            "required": true,
            "description": "Details about the casualty"
        },
        "created_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of task creation",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of last update",
            "format": "date-time"
        }
    }
} 
