{
    "type": "PhaseLine",
    "description": "A phase line entity representing a boundary or checkpoint in an operation",
    "fields": {
        "_id": {
            "type": "string",
            "required": true,
            "description": "Unique identifier for the phase line"
        },
        "name": {
            "type": "string",
            "required": true,
            "description": "Name or designation of the phase line"
        },
        "lineType": {
            "type": "string",
            "required": true,
            "default":"report",
            "description": "Type of phase line",
            "enum": ["boundary", "stop", "report", "coordination", "support"]
        },
          "location": {
            "type": "object",
            "required": true,
            "description": "Current location of the friendly force",
            "properties": [{
                "lat": {
                    "type": "number",
                    "required": true
                },
                "lon": {
                    "type": "number",
                    "required": true
                }
            }]
        },
        "description": {
            "type": "string",
            "required": false,
            "description": "Control measure for force coordination"
        },
        "assigned_to": {
            "type": "string",
            "required": false,
            "description": "ID of the executing unit"
        },
        "createdBy": {
            "type": "string",
            "required": true,
            "description": "User ID of the creator"
        },
        "updatedBy": {
            "type": "string",
            "required": true,
            "description": "User ID of the last updater"
        },
        "created_at": {
            "type": "string",
            "required": true,
            "description": "Timestamp of phase line creation",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "required": true,
            "description": "Last update time",
            "format": "date-time"
        }
    }
}
